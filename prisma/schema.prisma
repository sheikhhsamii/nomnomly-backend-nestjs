generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String
  email String  @unique
  password String
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
}

